<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/loginscreenbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/snakes_n_ladders_image"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40sp"
        android:background="@drawable/snakes_and_ladders" />


    <ImageButton
        android:id="@+id/login_image_btn"
        android:layout_width="358dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10sp"
        android:background="@drawable/login_register_image" />

</LinearLayout>